{
  "name": "ai-news-aggregator",
  "version": "1.0.0",
  "description": "AI news aggregation system that collects and categorizes AI-related news from multiple RSS sources",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "cross-env NODE_ENV=production tsc",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:backend": "npm run dev",
    "start:frontend": "cd frontend && npm start",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp package*.json dist/ && cp .env.* dist/ 2>/dev/null || true",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy": "./scripts/deploy.sh deploy",
    "deploy:rollback": "./scripts/deploy.sh rollback",
    "monitor": "./scripts/monitor.sh",
    "monitor:logs": "./scripts/monitor.sh logs",
    "monitor:status": "./scripts/monitor.sh status",
    "health": "./scripts/monitor.sh check",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "vercel-build": "npm run build:all"
  },
  "keywords": [
    "ai",
    "news",
    "aggregator",
    "rss",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "rss-parser": "^3.13.0",
    "winston": "^3.10.0"
  }
}
